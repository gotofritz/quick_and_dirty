{
  "name": "boilerplate-node",
  "version": "0.1.0",
  "description": "The simplest of setup for python",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon src/index.js",
    "test": "yarn test:lint & yarn test:jest",
    "test:lint": "eslint --fix src/ && prettier src/**/*.{js,jsx,json,css} --write .",
    "test:jest": "jest",
    "test:dev": "jest --watch"
  },
  "author": "gotofritz",
  "license": "ISC",
  "devDependencies": {
    "eslint": "5.15.3",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "24.5.0",
    "lint-staged": "8.1.5",
    "nodemon": "1.18.10",
    "prettier": "1.16.4"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "yarn test:lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  }
}
